/obj/item/doner_ctick
	icon = 'icons/psychonaut/obj/food/turkish.dmi'
	name = "Doner Stick"
	icon_state = "doner_stick"
	base_icon_state = "doner_stick"
	desc = "A tool for stringing meat on a stick and cooking it."
	w_class = WEIGHT_CLASS_BULKY

	var/static/list/meat_types = list("birdmeat" = "chicken", "meat" = "meat")
	var/donertype = null
	var/raw = TRUE
	var/meatnum = 0

	var/list/tastes = list()

/obj/item/doner_ctick/attackby(obj/item/item, mob/user, params)
	if(!istype(item, /obj/item/food/meat/slab))
		return
	if(!meat_types[item.icon_state])
		return
	if(!raw)
		return
	if(donertype && donertype != meat_types[item.icon_state])
		return
	if(meatnum == 5)
		to_chat(user, span_notice("You cant add more meat to it."))
		return
	item.reagents.trans_to(src, item.reagents.total_volume)
	for(var/taste in item.tastes)
		tastes[taste] = item.tastes[taste]

	donertype = meat_types[item.icon_state]
	meatnum++
	qdel(item)
